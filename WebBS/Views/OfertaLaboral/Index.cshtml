@model IEnumerable<WebBS.Models.OfertaLaboral>

@{
    ViewBag.Title = "Lista de Ofertas Laborales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ofertas Laborales</h2>

<p>
    <div class="row">
        <div class="col-xs-12">
            <div class="form-group">
                <div class="col-xs-12">
                    <a class="btn btn-primary" href="~/OfertaLaboral/Create">Nueva Oferta</a>
                </div>
            </div>
        </div>
    </div>
    

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            Perfil
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FuncionesAdicionales)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TiempoValidez)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaCrea)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Perfil.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FuncionesAdicionales)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TiempoValidez)
        </td>
        <td>

            @Html.DisplayFor(modelItem => item.FechaCrea)
        </td>
        
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdOfertaLaboral }) |
            @Html.ActionLink("Ver", "Details", new { id=item.IdOfertaLaboral }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IdOfertaLaboral })
        </td>
    </tr>
}

</table>
